---
import { getCollection } from 'astro:content'

const articles = await getCollection('articles', ({ data }) => {
  return !data.draft
})

// Sort articles by date
articles.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Articles</title>
  </head>
  <body class="bg-gray-50">
    <main class="mx-auto max-w-3xl px-4 py-8">
      <h1 class="mb-8 text-4xl font-bold text-gray-900">Articles</h1>
      <div class="space-y-8">
        {
          articles.map(article => (
            <article class="border-b border-gray-200 pb-8">
              <h2 class="mb-2 text-2xl font-semibold text-gray-900">
                <a href={`/articles/${article.slug}`} class="hover:text-blue-600">
                  {article.data.title}
                </a>
              </h2>
              <time class="text-gray-500" datetime={article.data.date.toISOString()}>
                {article.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            </article>
          ))
        }
      </div>
    </main>
  </body>
</html>
